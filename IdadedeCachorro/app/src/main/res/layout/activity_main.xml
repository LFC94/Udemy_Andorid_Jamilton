<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00b9d5"
    tools:context="lfc.com.idadedecachorro.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/cachorro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#4fc4d6"
        android:padding="10dp"
        android:text="Digite a idade de seu cachorro, para saber a idade dele em anos Humanos:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editText_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button_descobri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_idade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/descobri_idade" />

    <TextView
        android:id="@+id/textView_resultado"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/button_descobri"
        android:layout_marginTop="15dp"
        android:background="#4fc4df"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#ffffff" />

</RelativeLayout>
